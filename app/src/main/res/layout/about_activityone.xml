<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appcolor"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|top">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:textSize="35dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>
            <TextView
                android:text="Welcome to your personal assistant app."
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Record a message, set a time for a reminder, get reminded"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Take control of your life with standard features like alarm, to-do-list and an interactive calender feature."
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="uremindme takes prodeuctivity to the next level, where you belong."
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="18sp"
                android:gravity="center"
                android:id="@+id/aboutContactMe"
                android:layout_marginTop="75dp"
                android:autoLink="email"
                android:linksClickable="true"
                android:textStyle="italic"
                android:textColor="@android:color/white"
                android:text="developed by Trident Techno Minds, www.tridenttechnominds.com"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_thank_you"
        style="@style/buttonMain"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/thank_you"
        android:background="@color/appcolor"
        android:visibility="gone"
        android:textSize="16sp" />

</LinearLayout>